{
  "name": "qbz-downloader",
  "version": "4.0.0",
  "description": "ðŸŽµ Premium Qobuz Downloader Web Dashboard with Hi-Res Audio, Complete Metadata & Embedded Lyrics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:full": "cd client && npm install && npm run build && cd .. && node scripts/sync-ui.js && npm run build",
    "clean": "rimraf dist coverage",
    "copy-assets": "copyfiles -u 1 \"src/services/dashboard/public/**/*\" dist",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "test:coverage": "npx vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docs": "typedoc --out docs src/index.ts",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm run test",
    "docker:build": "docker build -t qbz-downloader .",
    "docker:run": "docker run -it --env-file .env -v ./downloads:/app/downloads qbz-downloader"
  },
  "keywords": [
    "qobuz",
    "downloader",
    "hi-res",
    "flac",
    "music",
    "metadata",
    "lyrics",
    "lossless",
    "audio",
    "music-downloader",
    "hifi",
    "web-dashboard"
  ],
  "author": "ifauzeee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ifauzeee/QBZ-Downloader.git"
  },
  "bugs": {
    "url": "https://github.com/ifauzeee/QBZ-Downloader/issues"
  },
  "homepage": "https://github.com/ifauzeee/QBZ-Downloader#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "archiver": "^7.0.1",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.6.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "figlet": "^1.7.0",
