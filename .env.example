# ==============================================================================
# QBZ-DOWNLOADER CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your credentials

# ==============================================================================
# QOBUZ CREDENTIALS (REQUIRED)
# Get these from your Qobuz account
# ==============================================================================
QOBUZ_APP_ID=
QOBUZ_APP_SECRET=
QOBUZ_USER_AUTH_TOKEN=
QOBUZ_USER_ID=

# ==============================================================================
# TELEGRAM BOT (OPTIONAL)
# Create a bot with @BotFather to get the token
# Get your Chat ID by messaging @userinfobot
# ==============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Upload downloaded files to Telegram (true/false)
TELEGRAM_UPLOAD_FILES=true

# Delete local files after successful upload (true/false)
TELEGRAM_AUTO_DELETE=true

# Comma-separated list of allowed user IDs (leave empty to allow only TELEGRAM_CHAT_ID)
TELEGRAM_ALLOWED_USERS=

# ==============================================================================
# WEB DASHBOARD (OPTIONAL)
# ==============================================================================
# Port for the web dashboard (default: 3000)
DASHBOARD_PORT=3000

# Password for dashboard access (Leave empty for no password)
DASHBOARD_PASSWORD=

# Auto-cleanup downloads after X hours (0 to disable, default: 24)
DASHBOARD_AUTO_CLEAN_HOURS=24

# ==============================================================================
# DOWNLOAD SETTINGS
# ==============================================================================
# Output directory for downloads (default: ./downloads)
DOWNLOADS_PATH=./downloads

# Default quality: 5=MP3, 6=FLAC 16/44.1, 7=FLAC 24/96, 27=FLAC 24/192
DEFAULT_QUALITY=27

# ==============================================================================
# NETWORK (OPTIONAL)
# ==============================================================================
# HTTP/HTTPS proxy URL (e.g., http://127.0.0.1:8080)
PROXY_URL=

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# ==============================================================================
# RATE LIMITING (TELEGRAM BOT)
# ==============================================================================
# Maximum requests per user per minute
RATE_LIMIT_MAX_REQUESTS=30

# Block duration in seconds after exceeding limit
RATE_LIMIT_BLOCK_SECONDS=300

# ==============================================================================
# DOCKER SETTINGS (only used in Docker environment)
# ==============================================================================
NODE_ENV=production