# ==============================================================================
# QBZ-DOWNLOADER CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your credentials.

# ==============================================================================
# QOBUZ CREDENTIALS (REQUIRED)
# ==============================================================================
QOBUZ_APP_ID=
QOBUZ_APP_SECRET=
QOBUZ_USER_AUTH_TOKEN=
QOBUZ_USER_ID=

# ==============================================================================
# ENHANCED METADATA APIs (OPTIONAL)
# ==============================================================================
# These APIs provide enhanced metadata like BPM, Key, Mood, Featured Artists,
# Catalog Numbers, and more. All are optional but recommended.

# Spotify (BPM, Key, Mood, Energy, Featured Artists, Genres)
# Get keys at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Discogs (Catalog Number, Country, Styles, Labels)
# Get token at: https://www.discogs.com/settings/developers
DISCOGS_TOKEN=

# ==============================================================================
# DOWNLOAD SETTINGS
# ==============================================================================
DOWNLOAD_PATH=downloads
MAX_CONCURRENCY=4

# Folder Structure: {artist}/{album}
FOLDER_TEMPLATE={artist}/{album}

# File Naming: {track_number} {title}
FILE_TEMPLATE={track_number} {title}

# ==============================================================================
# METADATA & ASSETS
# ==============================================================================
SAVE_LRC_FILE=false
SAVE_COVER_FILE=false
EMBED_COVER_ART=true
EMBED_LYRICS=true

# ==============================================================================
# NETWORK
# ==============================================================================
PROXY_URL=
